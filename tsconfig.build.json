{
  "extends": "./tsconfig.json",
  "include": ["types/**/*.ts*", "lib/**/*.ts*", "src/**/*.ts*"],
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "isolatedModules": false,
    "module": "commonjs",
    "noEmit": false,
    "checkJs": false,
    "allowJs": false,
    "emitDeclarationOnly": false,
    "rootDir": "./src"
  }
}
